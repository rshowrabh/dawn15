{{ 'discount-banner.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * 0.75);
    padding-bottom: calc({{ section.settings.padding_bottom }}px * 0.75);
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div>
  <div class="section-{{ section.id }}-padding page-width page-margin  left">
    <div class="color-{{ section.settings.color_scheme }} gradient image-banner template-discount-banner " style="height: {{ section.settings.height }};">
      <div class="left_section">
        <div class="text">
          {% if section.settings.is_sale %}
            <p>SALE</p>
          {% endif %}
          <h1>{{ section.settings.banner_heading }}</h1>
          <p>{{ section.settings.banner_text }}</p>
          <a href="" class="btn btn-primary">Shop Now</a>
        </div>
      </div>
      <div class="right_section">
        <div>
          <div class="image fill">
            <img src="{{ section.settings.image | image_url }}" alt="">
          </div>
          <span class="dis_taq">{{ section.settings.discount_price }}</span>
          {% if section.settings.is_sale %}
            <span class="sale">Sale</span>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Discount Banner",
    "settings": [
      {
        "type": "text",
        "id": "height",
        "label": "Section Height",
        "default": "500px"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Select Image"
      },
      {
        "type": "text",
        "id": "discount_price",
        "label": "Discount Price",
        "default": "-20%"
      },
      {
        "type": "text",
        "id": "banner_heading",
        "label": "Heading",
        "default": "Limited Time, Unbeatable Savings"
      }, {
        "type": "richtext",
        "id": "banner_text",
        "label": "Sub Heading",
        "default": "<p>Hurry and take advantage of our limited-time, unbeatable savings event</p>"
      }, {
        "type": "checkbox",
        "id": "is_sale",
        "label": "Enable Sale"
      }, {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "t:sections.all.colors.label",
        "default": "scheme-1"
      }

    ],
    "presets": [
      {
        "name": "Discount Banner Section"
      }
    ]
  }
{% endschema %}