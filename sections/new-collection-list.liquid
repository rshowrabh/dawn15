  /* --body_font :  'Akzidenz-Grotesk BQ'; */
  --body_font_size : 16px;
  --body_line_height : 1.2rem;
  --small_font_size : 11px;
  --font-weight-medium : 500;
  --font-weight-bold : 700;
  --font-weight-normal : 400;
}
 h2, h3, h4, h5, h6, p, a{
  letter-spacing: -0.01em;
}


.slider-media::after, .multicolumnimagebutton .media::after{
    position: absolute;
    content: "";
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    background: rgba(0, 0, 0, 0.1);
    z-index: 0;
}

.w-100 {
  width: 100%;
}

.slider-heading, .slider-subheading{
  color: #fff;
}

.btn {
  align-items: center;
  max-width: fit-content;
  /* padding: 10px; */
  margin: 10px 0px;
  border-radius: 5px;
  text-decoration: none;
  justify-content: center;
  text-transform: uppercase;
  font-size: var(--body_font);
  font-weight: bold;
  transition: 300ms;
  text-align: center;
  display: inline-block;
  position: relative;
  text-decoration: none;
  text-transform: capitalize;
  width: 200px;
  overflow: hidden;
  padding: 1.4rem 2.5rem;
  width: auto;
}
.sliderr-buttons .btn{
  color: #FFF;
}

.primary-btn, .badge {
  background: rgba(var(--color-button), var(--alpha-button-background));
  color: rgb(var(--color-button-text));
  border: 2px solid rgba(var(--color-button));
  transition: 0.25s ease all;
}
.primary-btn:hover {
  background:rgb(var(--color-button-text));
  color: rgba(var(--color-button));
  border: 2px solid rgba(var(--color-button));
  transition: 0.25s ease all;
}

.sliderr-buttons .primary-btn:hover,.multicolumnimagebutton .multicolumn-card__info .btn:hover {
  color: #fff;
  background: transparent;
} 

.primary-btn-rev {
  color: rgba(var(--color-button));
  background: transparent;
  border: 4px solid rgba(var(--color-button));
  transition: 0.25s ease all;
}
.my-bg{
  background-color: rgba(var(--color-button));
  border:4px solid rgba(var(--color-button));
}
.my-col{
  color: rgba(var(--color-button));
}
.primary-btn-rev:hover {
  /* background: rgba(var(--color-button)); */
} 

.secondary-btn {
  /* background: rgb(var(--color-secondary-button)); */
  background: transparent;
  color: #FFF;
  position: relative;
  text-decoration: none;
}


.secondary-btn:after{
  content: "";
  position: absolute;
  left: 0;
  bottom: 0;
  width: 0%;
  height: .1rem;
  background-color: currentColor;
  transition: width var(--duration-default);
}
.secondary-btn:hover::after{
  width: 100%;
}

/* Footer */

.footer-block {
  padding: 0px 20px;
}

/* COver Image */

.fill {
    display: flex;
    align-items: center;
    overflow: hidden;
    text-align: center;
